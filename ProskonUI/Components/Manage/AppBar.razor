<SfAppBar ColorMode="AppBarColor.Dark"> 

    <SfButton aria-label="menu"
              CssClass="e-inherit menu"
              IconCss="bi bi-list fs-24"
              OnClick="HandleClick">
    </SfButton>
     
    <SfButton CssClass="e-inherit home e-appbar-menu" Content="Proskon"></SfButton>
     
    <AppBarSpacer></AppBarSpacer>
     
    <AppBarSeparator></AppBarSeparator>
     
    <UserMenu />

</SfAppBar>

@code {
    [Parameter] public EventCallback OnToggleSidebar { get; set; }

    private async Task HandleClick()
    { 
        if (OnToggleSidebar.HasDelegate)
        {
            await OnToggleSidebar.InvokeAsync();
        }
        else
        {
            Console.WriteLine("❌ ToggleSidebar bağlı değil!");
        }
    }
}
